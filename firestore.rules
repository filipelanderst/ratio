rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras de segurança reais - CADA USUÁRIO SÓ PODE ACESSAR SEUS PRÓPRIOS DADOS
    // Isso economiza dinheiro evitando abusos e protege dados dos usuários
    
    match /artifacts/{appId}/users/{userId}/{document=**} {
      // Permitir leitura/escrita APENAS se o usuário estiver autenticado
      // E estiver acessando SEUS PRÓPRIOS dados (uid == userId)
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bloquear acesso a qualquer outro documento por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
